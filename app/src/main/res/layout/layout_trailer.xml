<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:paddingBottom="@dimen/padding_vertical_details_list_item"
    android:paddingTop="@dimen/padding_vertical_details_list_item">

    <TextView
        android:id="@+id/text_view_trailer_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_end_trailer_name"
        android:layout_marginRight="@dimen/margin_end_trailer_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorTextDefault"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/image_button_share"
        app:layout_constraintHorizontal_bias="0.00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_default="wrap" />

    <ImageButton
        android:id="@+id/image_button_share"
        android:layout_width="@dimen/size_trailer_share_button"
        android:layout_height="@dimen/size_trailer_share_button"
        android:layout_marginEnd="@dimen/margin_end_trailer_share_button"
        android:layout_marginRight="@dimen/margin_end_trailer_share_button"
        android:background="@null"
        android:contentDescription="@string/share_trailer_link"
        android:focusable="false"
        android:src="@drawable/share"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/size_trailer_play_arrow"
        android:layout_height="@dimen/size_trailer_play_arrow"
        android:contentDescription="@string/play_arrow"
        android:src="@drawable/play_arrow"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>